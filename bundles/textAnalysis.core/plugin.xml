<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension point="org.eclipse.debug.core.launchConfigurationTypes">
   		<launchConfigurationType
	   		 id="textAnalysis.core.LaunchConfigurationTyp"
	   		 delegate="textAnalysis.core.AnalyzerDelegate"
	   		 modes="run, debug"
	         name="TextAnalyzer">
  		</launchConfigurationType>
   </extension>
  
   <extension point="org.eclipse.debug.ui.launchConfigurationTabGroups">
        <launchConfigurationTabGroup
            type="textAnalysis.core.LaunchConfigurationTyp"
            class="textAnalysis.core.AnalyzerTabGroup" 
            id="textAnalysis.core.AnalyzerTabGroup">
            <launchMode 
                  mode="debug"
                  perspective="org.eclipse.debug.ui.DebugPerspective"
                  description="">
            </launchMode>
            <launchMode
                  mode="run"
                  description="">
            </launchMode>
        </launchConfigurationTabGroup>
	</extension>
	
   <extension point="org.eclipse.debug.ui.launchConfigurationTypeImages">
    <launchConfigurationTypeImage
            id="launchconfigurationtypeimage"
            configTypeID="textAnalysis.core.LaunchConfigurationTyp"
            icon="icons/analysis.png">
    </launchConfigurationTypeImage>
	</extension>


</plugin>
